.main{
  width: 100%;
  height: 300vh;
  background-color: #1a1a1a;
}
.swiper{
  width: 100%;
}
.swiper .swiper-item{
  width: 100%;
}
.swiper .swiper-item image{
  width: 100%;
}
.category {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 175rpx;
  border:1rpx solid black;
  background-color: black;
}
.category .category-item{
  width: 140rpx;
  height: 140rpx;
  border: 4rpx solid orangered;
  border-radius: 100%;
  display: flex;
  flex-direction: column;
  color: white;
  background-color: #2F2E2E;
  margin-left: 7rpx;
  margin-top: 15rpx;
}
.category .category-item text{
  width: 100rpx;
  height: 40rpx;
  font-size: 24rpx;
  text-align: center;
  margin-left: 22rpx;

}
.category .category-item image{
  width: 80rpx;
  height: 80rpx;
  margin-left: 30rpx;
  margin-top: 25rpx;
}
.news{
  margin-top: 36rpx;
  width: 100%;
 

}

/* 公共部分 */
.title{
  display: flex;
  flex-direction: row;
  margin-top:50rpx;
}
.title .line{
  color: orangered;
  font-weight: 900;
  margin-left: 15rpx;
  margin-top: 6rpx;

}
.title .small-title{
  color: white;
  font-weight: 900;

  margin-left: 12rpx;
  font-size: 46rpx;
}


/* 新闻部分 */
.news_list{
  margin-top: 16rpx;
  margin-left: 20rpx;
  padding-left:12rpx;
  padding-right:12rpx;
  color: white;
  font-size: 32rpx;
}
.news_list .news-list_item{
  margin-top: 15rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
}
.news_list .news-list_item .a{
  width: 85%;
}
.news_list .news-list_item .date{
  
 
  color: gray;
  font-size:28rpx;
  margin-top: 10rpx;
}

/* 视频部分 */
.video{
  margin-top: 16rpx;
  
  color: white;
  font-size: 32rpx;
  width: 100%;
}
.video .video_list {

  display: flex;
  flex-wrap: wrap;
  width: 100%;
  margin-top: 20rpx;
  padding: 0 12rpx;
}
.video .video_list .video_list_item{
  width: 45%;
  margin-left: 20rpx;
  height: 40vh;
}
.video .video_list .video_list_item .a{
  width: 100%;
  height: 200rpx;
}
.video .video_list .video_list_item .c{
  color: grey;
  font-size: 28rpx;
}

/* 精品攻略 */
.strategy{
  width: 100%;

}
.strategy .strategy_list{
  width: 100%;
  display: flex;
  flex-direction: column;
  font-size: 32rpx;
  color: white;
  padding: 0 12rpx;
  
  
}
.strategy .strategy_list .strategy_list_item{
  width: 100%;
  margin-top: 30rpx;
  border-bottom: 1rpx solid gray;
  padding-bottom: 20rpx;
 
 
}
.strategy .strategy_list .strategy_list_item .angry{
  justify-content: space-between;
  display: flex;
  flex-direction: row;
  width: 100%;

}
.strategy .strategy_list .strategy_list_item .a{
  width: 80%;
}
.strategy .strategy_list .strategy_list_item .c{
  color: gray;
  font-size: 28rpx;
  margin-top: 20rpx;

}
.strategy .strategy_list .strategy_list_item image{
  width: 100rpx;
  height: 60rpx;
  margin-right: 20rpx;
}
